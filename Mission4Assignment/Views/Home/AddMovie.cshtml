@{
    //Sets webpage title
    ViewData["Title"] = "Add a Movie";
}

@*Connects model to view to allow form to access model elements*@
@model Mission4Assignment.Models.MovieInfo

<h1>Add a Movie to the Database</h1>

<div>
    @*form for collecting and passing movie data from the user to the database*@
    <form method="post">

        @*Displays error message when form requirements aren't met*@
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option>Select a Category</option>
            @foreach (MovieCategory x in ViewBag.Categories)
            {
                <option value="@x.CategoryId">@x.CategoryName</option>
            }
        </select><br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="IsEdited">Edited:</label>
        <select asp-for="IsEdited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">Lent to:</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes" rows="2"></textarea><br />

        <button type="submit">Add Movie</button>

    </form>
</div>
