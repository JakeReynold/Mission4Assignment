@{
}

@model List<MovieInfo>

<h1 class="text-center">Movie Library</h1>

<table class="table table-bordered table-hover">

    <thead class="font-weight-bold text-center">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To:</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Category.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.IsEdited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>

                <td class="text-center"><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieID" class=" btn btn-outline-dark">Edit</a></td>
                <td class="text-center"><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieID" class="btn btn-outline-dark">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
